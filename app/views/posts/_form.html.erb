<%= form_for @post do |f| %>

  <% if @post.errors.present? %>
    <div class="errors">
      <%= @post.errors.full_messages.join("<br/>".html_safe) %>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :content %>
    <div class="input">
      <%= f.text_area :content %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn primary' %>
  </div>
<% end %>