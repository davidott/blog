<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Preview</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= link_to post.title, post %></td>
      <td><%= truncate(post.content) %></td>
    </tr>

  <% end %>
</table>

<%= link_to "New Post", new_post_path %>